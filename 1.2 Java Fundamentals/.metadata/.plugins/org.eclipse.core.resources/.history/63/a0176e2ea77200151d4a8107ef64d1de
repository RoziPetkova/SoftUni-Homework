import java.util.Scanner;
import java.lang.String;
public class FormattingNumbers {
	public static void main(String[] args){
		Scanner input = new Scanner(System.in);
		String[] numbers = input.nextLine().split(" ");
		int a = Integer.parseInt(numbers[0]);
		double b = Double.parseDouble(numbers[1]);
		double c = Double.parseDouble(numbers[1]);
		System.out.printf("{0}|{1}|%.2f|%.3f",
				padRight(Integer.toString(convertToHex(a)), 10),
				padLeft(Integer.toBinaryString(a), 10),
				padLeft(Double.toString(b),10),
				padRight(Double.toString(c),10));
	}
	public static int convertToHex(int n) {
		  return Integer.valueOf(String.valueOf(n), 16);
		}
	
	public static String padRight(String s, int n) {
	     return String.format("%1$-" + n + "s", s);  
	}

	public static String padLeft(String s, int n) {
	    return String.format("%1$" + n + "s", s);  
	}
}
